{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/estimate-json.schema.json",
  "title": "EstimateJSON",
  "type": "object",
  "required": [
    "version",
    "createdAt",
    "customerName",
    "title",
    "place",
    "date",
    "sections",
    "discount"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "customerName": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "place": {
      "type": "string",
      "minLength": 1
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}年\\d{1,2}月\\d{1,2}日$"
    },
    "sections": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["title", "items"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "items": {
            "type": "array",
            "minItems": 0,
            "items": {
              "type": "object",
              "required": ["name", "quantity", "unit", "unitPrice", "note"],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "quantity": {
                  "type": "number"
                },
                "unit": {
                  "type": "string",
                  "minLength": 1
                },
                "unitPrice": {
                  "type": "number"
                },
                "note": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "discount": {
      "type": "number"
    }
  },
  "additionalProperties": false
}
